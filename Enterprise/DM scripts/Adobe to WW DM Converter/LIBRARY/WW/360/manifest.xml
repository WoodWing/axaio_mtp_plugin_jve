<?xml version="1.0"?>
<manifest xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" usedSchemaVersion="1.0">
  <widget widgetVersion="1.0">
    <description>360 viewer. Provide file ref to a zip with images that will be shown in the
      360.</description>
    <rootfile>index.html</rootfile>
    <properties>
      <booleanProperty id="stop">
        <description>Defines whether the 360 viewer works in circular or linear
          fashion.</description>
        <label>Stop at start/end</label>
        <value>false</value>
      </booleanProperty>
      <fileProperty id="360files">
        <description>The images for the 360.</description>
        <label>360 files</label>
        <objectTypes>
          <objectType type="Other">
            <format>application/zip</format>
          </objectType>
        </objectTypes>
        <value xsi:nil="true"/>
      </fileProperty>
    </properties>
  </widget>
</manifest>
